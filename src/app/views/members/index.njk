{% extends "layout.njk" %}

{% block content %}

  <div class="card table-container">
    <a href="/members/create">Novo</a>
    <table>
      <thead>
        <tr>
          <th>Membros</th>
          <th>Email</th>
          <th>Peso (kg)</th>
          <th>Altura (cm)</th>
          <th>Ação</th>
        </tr>
      </thead>

      <tbody>

        {% for member in members %}
          <tr>
            <td>
              <span style="background-image: url({{ member.avatar_url }})"></span>
              {{ member.name }}
            </td>
            <td>{{ member.email}}</td>
            <td>{{ member.weigth}}</td>
            <td>{{ member.heigth}}</td>
            <td><a href="/members/{{ member.id }}">ver</a></td>
          </tr>
        {% endfor %}

      </tbody>
    </table>
  </div>

{% endblock content %}